{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true, 
    "outDir": "./dist/compiled",
    "sourceMap": true,
    "strictNullChecks": true,
    "lib": [ "es2017", "es2015", "dom" ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "pretty": true,
    "types": [
			"jest",
			"node"
    ],
    "baseUrl": ".",
  },
  "include": [
    "src/**/*.ts",
    "examples/**/*.ts",
    ".eslintrc.js",
  ],
  "exclude": [
    "node_modules",
    "__mocks__/**/*",
    "**/__mocks__/*"
  ]
}
